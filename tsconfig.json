{
    "compilerOptions": {
      "target": "es5",
      "module": "commonjs",
      "allowJs": true,
      "checkJs": true,
      "declaration": true,
      "declarationMap": true,
      "sourceMap": false,
      "noEmit": true,
      "strict": true,
      "downlevelIteration": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "noImplicitReturns": true,
      "noFallthroughCasesInSwitch": true,
       "types": [
         "@types/node"
       ],
      "esModuleInterop": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true
    },
    "include": [
      "src/**/*"
    ],
    "exclude": [
      "src/spa/**/*",
      "*/__test__/**/*"
    ]
  }
